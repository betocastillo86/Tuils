@model IList<ProductSpecificationModel>
@using Nop.Web.Models.Catalog;
@{
    ProductSpecificationModel lastSpec = null;
}
@if (Model.Count > 0)
{
    <div class="product-specs-box">
        <div class="title">@T("Products.Specs")</div>
        <div class="data-table">            
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                if (i == 0 || item.SpecificationAttributeId != lastSpec.SpecificationAttributeId)
                {
                    if(i!=0)
                    {
                        @:</ul>
                    }    
                    <span>@item.SpecificationAttributeName</span>
                    @:<ul>

                    lastSpec = item;
                }

                <li>@Html.Raw(item.ValueRaw)</li>
            }
        </div>
    </div>
}