@model ProductDetailsModel
@using Nop.Web.Models.Catalog;

@*@if (!String.IsNullOrWhiteSpace(Model.Sku) && Model.ShowSku)
{
    <div class="sku">
        <span class="label">@T("Products.Sku"): </span><span class="value" itemprop="sku" id="sku-@Model.Id">@Model.Sku</span>
    </div>
}
    
    @if (!String.IsNullOrWhiteSpace(Model.ManufacturerPartNumber) && Model.ShowManufacturerPartNumber)
    {
        <div class="manufacturer-part-number">
            <span class="label">@T("Products.ManufacturerPartNumber"): </span><span class="value" id="mpn-@Model.Id">@Model.ManufacturerPartNumber</span>
        </div>
    }
    
    @if (!String.IsNullOrWhiteSpace(Model.Gtin) && Model.ShowGtin)
    {
        <div class="gtin">
            <span class="label">@T("Products.GTIN"): </span><span class="value" id="gtin-@Model.Id">@Model.Gtin</span>
        </div>
    }
    
    @if (Model.FreeShippingNotificationEnabled && Model.IsFreeShipping)
    {
        <div class="free-shipping">@T("Products.FreeShipping")</div>
    }*@
    @*Delivery date*@
    @if (!String.IsNullOrWhiteSpace(Model.DeliveryDate))
    {
        <div class="delivery-date">
            <span class="label">@T("Products.DeliveryDate"): </span><span class="value">@Model.DeliveryDate</span>
        </div>
    }
     @*State province*@
    @if (!string.IsNullOrEmpty(Model.StateProvinceName))
    {
        <div class="manufacturer-part-number">
            <span class="label">@T("Products.StateProvinceName"): </span><span class="value" >@Model.StateProvinceName</span>
        </div>
    }

