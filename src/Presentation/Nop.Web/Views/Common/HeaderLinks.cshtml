@model HeaderLinksModel
@using Nop.Web.Models.Common;
<div class="header-links">
    <ul>
        @*@Html.Widget("header_links_before")*@
        @if (Model.UnansweredQuestions > 0)
        { 
            <li class="btn_noti"><a href="@Url.Action("Questions", "ControlPanel")" class="icon-camp" title="@T("Account.UnansweredQuestions.Alt", Model.UnansweredQuestions)"></a><span>@Model.UnansweredQuestions</span></li>    
        }
        
        @if (Model.IsAuthenticated)
        {
            <li class="user-li"><a href="@Url.RouteUrl("ControlPanel")"><img src="~/Themes/Healthy/Content/images/img_user.svg"/> <p>@Model.CustomerEmailUsername</p><br/></a></li>
            <li><a href="@Url.RouteUrl("Logout")" class="ico-logout">@T("Account.Logout")</a></li>
        }
        else
        {
            @*<li id="liRegister"><a href="@Url.RouteUrl("Register")" class="ico-register">@T("Account.Register")</a></li>
            <li id="liLogin"><a href="@Url.RouteUrl("Login")" class="ico-login">@T("Account.Login")</a></li>*@
            <li id="liRegister" class="preLogin" ><a href="javascript:;" class="ico-register">@T("Account.Register")</a></li>
            <li id="liLogin" class="preLogin"><a href="javascript:;" class="ico-login">@T("Account.Login")</a></li>
        }
        @if (Model.AllowPrivateMessages)
        {
            <li>
                <a href="@Url.RouteUrl("PrivateMessages", new { tab = "" })" class="ico-inbox">
                    <span class="inbox-label">@T("PrivateMessages.Inbox")</span>
                    <span class="inbox-unread">@Model.UnreadPrivateMessages</span>
                </a>
            </li>
        }
        @if (Model.ShoppingCartEnabled)
        {
            @*<li id="topcartlink" style="padding:0 5px;">
                <a href="@Url.RouteUrl("ShoppingCart")" class="ico-cart">
                    <span class="icon-car"></span>
                    <span class="cart-label">@T("ShoppingCart")</span>
                    <span class="cart-qty">@T("ShoppingCart.HeaderQuantity", Model.ShoppingCartItems)</span>
                </a>
            </li>*@
        }
        @if (Model.WishlistEnabled)
        {
            <li style="padding:0 5px;">
                <a href="@Url.RouteUrl("Wishlist")" class="ico-wishlist">
                    <span class="icon-corazon"></span>
                    <span class="wishlist-label">@T("Wishlist")</span>
                    <span class="wishlist-qty"><i>@T("Wishlist.HeaderQuantity", Model.WishlistItems)</i></span>
                </a>
            </li>
        }
        @*@Html.Widget("header_links_after")*@
    </ul>


    @if (!Model.IsAuthenticated)
    { 
        <script id="templateLoggedUser" type="text/x-handlebars-template">

            <li class="user-li"><a href="@Url.RouteUrl("ControlPanel")"><img src="/Themes/Healthy/Content/images/img_user.svg" /> <p>Hola {{Name}} !</p> <br /></a></li>
            <li><a href="@Url.RouteUrl("Logout")" class="ico-logout">@T("Account.Logout")</a></li>

        </script>
        <div id="divRegisterUser"></div>
        <div id="divLoginUser"></div>
    }

    @if (Model.AllowPrivateMessages && !string.IsNullOrEmpty(Model.AlertMessage))
    {
        /*new private message notification*/
        <script type="text/javascript">
            $(document).ready(function () {
                displayPopupNotification('@Html.Raw(HttpUtility.JavaScriptStringEncode(Model.AlertMessage))', 'success', false);
            });
        </script>
    }
    @if (Model.ShoppingCartEnabled)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                $('.header').on('mouseenter', '#topcartlink', function () {
                    $('#flyout-cart').addClass('active');
                });
                $('.header').on('mouseleave', '#topcartlink', function () {
                    $('#flyout-cart').removeClass('active');
                });
                $('.header').on('mouseenter', '#flyout-cart', function () {
                    $('#flyout-cart').addClass('active');
                });
                $('.header').on('mouseleave', '#flyout-cart', function () {
                    $('#flyout-cart').removeClass('active');
                });
            });
        </script>
    }
    
    <script id="templateLinksResponsiveMenu" type="text/x-handlebars-template">

        @*<div class="main-anuncia">
            @Html.ActionLink(T("header.publishproduct").Text, "Index", "Sales", new { }, new { @class = "main-btn_anuncia" })
        </div>*@

        @if (Model.IsAuthenticated)
        {
            <div class="user-li"><a href="@Url.RouteUrl("ControlPanel")"><img src="~/Themes/Healthy/Content/images/img_user.svg"/> <p>@Model.CustomerEmailUsername</p><br/></a></div>
        }
        else
        {
            <div class="main-registro">
                <a href="javascript:void(0);" class="ico-register">@T("Account.Register")</a>
                <a href="javascript:void(0);" class="ico-login">@T("Account.Login")</a>
                <br/>
            </div>
        }

        @if (Model.WishlistEnabled)
        {
            <div class="main-wishlist">
                <a href="@Url.RouteUrl("Wishlist")" class="ico-wishlist">
                    <span class="icon-corazon"></span>
                    <span class="wishlist-label">@T("Wishlist")</span>
                    <span class="wishlist-qty"><i>@T("Wishlist.HeaderQuantity", Model.WishlistItems)</i></span>
                </a>
            </div>
        }
        <br />

    </script>

    <script id="templateLoggedInResponsive" type="text/x-handlebars-template">
        <div class="user-li"><a href="@Url.RouteUrl("ControlPanel")"><img src="/Themes/Healthy/Content/images/img_user.svg"/> <p>{{Name}}</p><br/></a></div>
    </script>

    <script id="templateLogoutResponsiveMenu" type="text/x-handlebars">
        @if (Model.IsAuthenticated)
        {
            <div><a href="@Url.RouteUrl("Logout")" class="ico-logout">@T("Account.Logout")</a></div>
        }
    </script>
</div>
