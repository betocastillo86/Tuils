@model Nop.Web.Models.Sales.PublishProductModel

    @Html.ActionLink("< Volver atrás", "Index", null, new { @class = "btn_volver" })

    <nav class="nav-category">
        <li class="category-view cat_select"><span>@Model.SubSectionTitle</span></li>
    </nav>
    <div class="divShowCategories category-container">


    </div>
    <input type="button" class="btn_continue button-1" value="Continuar" style="display:none">
    
<script id="templateCategorySelector" type="text/x-handlebars-template">
    <div class="category-column">
        <ul class="divCategorySelector" tuils-level="{{currentLevel}}">
            {{#if ChildrenCategories.length }}
            <input type="text" placeholder="@T("PublishProduct.SelectCategoryFilter")" />
                {{#each ChildrenCategories}}
                <li tuils-id="{{Id}}" tuils-filter="{{toLowerCase Name}}" tuils-level='{{../currentLevel}}'>{{Name}}</li>
                {{/each}}
            {{/if}}
        </ul>
    </div>
</script>
