@model Nop.Web.Models.Sales.PublishProductModel
<form class="content-public">
    <div class="title">@T("PublishProduct.StepMenu2_Service")</div>

    <div class="form-public">

        @Html.Partial("_CommonFieldsProductBikeDetail", Model)
        
        <br/>
        <div class="input_check" title="@T("PublishProduct.HasSpecialBikes.Alt")" >
            <input id="chkHasSpecialBikes" type="checkbox" /> @Html.Label(@T("PublishProduct.HasSpecialBikes").Text)
        </div>
        <br />
        <div id="divBikeReferences" style="display:none" title="@T("PublishProduct.TitleForBrandBike.Alt")">
            <div class="title">@T("PublishProduct.Product.TitleForBrandBike")</div>
            <div class="tipo-marca" title="@T("PublishProduct.ForBrandBikeService.Alt")">
                @Html.LabelT("PublishProduct.Product.ForBrandBike")
                <input id="txtBikeReferencesProduct" />
            </div>
        </div>
        <br />
        
        <div tuils-for="shipping">
            <div class="title">@T("PublishProduct.TitleDoorToDoor")</div>
            <div class="input_check" title="@T("PublishProduct.TitleDoorToDoor.Alt")">
                <input id="chkIsShipEnabled" type="checkbox" /> @Html.LabelT("PublishProduct.IsDoorToDoor")
            </div>
            <br />
            <div class="inputs" tuils-for="no-doorToDoor" style="display:none" title="@T("PublishProduct.ShippingValueDoorToDoor.Alt")">
                @Html.LabelT("PublishProduct.ShippingValueDoorToDoor")
                <input id="txtAdditionalShippingCharge" type="text" tuils-val="int" />
                @ShowRequired("AdditionalShippingCharge")
            </div>
            <div class="inputs" tuils-for="no-doorToDoor" style="display:none" title="@T("PublishProduct.DetailDoorToDoor.Alt")">
                @Html.LabelT("PublishProduct.DetailDoorToDoor")
                <input id="txtDetailShipping" type="text" />
                @ShowRequired("DetailShipping")
            </div>
        </div>
        <br />
        <div class="title">@T("PublishProduct.TitleSupplies")</div>
        <div class="input_check" title="@T("PublishProduct.IncludeSupplies.Alt")">
            <input id="chkIncludeSupplies" type="checkbox" /> @Html.LabelT("PublishProduct.IncludeSupplies")
        </div>
        <br />
        <div tuils-for="no-supplies">
            <div class="tipo-marca" title="@T("PublishProduct.Supplies.Alt")">
                @Html.LabelT("PublishProduct.Supplies")
                <input id="txtSupplies" type="text" />
                @ShowRequired("Supplies")
            </div>
        </div>
        <div class="inputs" tuils-for="no-supplies" title="@T("PublishProduct.SuppliesValue.Alt")">
            @Html.LabelT("PublishProduct.SuppliesValue")
            <input id="txtSuppliesValue" type="text" tuils-val="int" />
            @ShowRequired("SuppliesValue")
        </div>
        <div class="inputs" title="@T("PublishProduct.StateProvince.Alt")">
            @Html.LabelT("PublishProduct.StateProvince")
            @Html.DropDownList("ddlStateProvince", Model.StateProvinces, "-")
            @ShowRequired("StateProvince")
        </div>
        
        <br />
        <div class="descript_crea" title="@T("PublishProduct.FullDescription.Alt")">
            @Html.TextAreaRequired("FullDescription", labelResource: "PublishProduct.Product.Html", showAsterisk:false)
        </div>
    </div>
</form>
<div class="conte_btnDoble">
    <input type="button" class="btn_continue button-1 btnNext" value="@T("PublishProduct.NextStep")">
    <input type="button" class="btn_continue button-1 btnBack" value="@T("PublishProduct.BackStep")">
    <br/>
</div>
@helper ShowRequired(string fieldName, bool showAsterisk = true)
{
    if (showAsterisk)
    { 
        <span class="required">*</span>
    }
    <div id="addMessage@(fieldName)" class="text-character"></div>
    <span class="field-validation-error" tuils-val-for="@fieldName"></span>
}