    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/wysihtml5-0.3.0.min.js");
    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/backbone/models/tuils.product.js");
    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/backbone/models/tuils.file.js");
    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/backbone/models/tuils.category.js");
    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/backbone/models/tuils.manufacturer.js");

    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/resize.js");
    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/canvas-to-blob.min.js");
    
    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/backbone/views/tuils.publishProduct.selectCategoryView.js");
    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/backbone/views/tuils.publishProduct.productDetail.js");
    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/backbone/views/tuils.publishProduct.summaryView.js");
    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/backbone/views/tuils.publishProductView.js");
    Html.AppendScriptParts(ResourceLocation.Foot, "~/Scripts/backbone/views/tuils.utilities.htmlEditorView.js");
