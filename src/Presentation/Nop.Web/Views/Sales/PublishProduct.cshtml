<style>
    .selectedStep {
        border-color:red !important;
    }
</style>
<div id="divMainSection">
    <h2>PublishProduct</h2>

    <div>
        <h2 style="float: left; border: solid 1px; padding: 5px;">@Html.ActionLink("Producto", "PublishProduct")</h2>
        <h2 style="float: left; border: solid 1px; padding: 5px;">@Html.ActionLink("Servicio", "PublishProduct")</h2>
        <h2 style="float: left; border: solid 1px; padding: 5px;">@Html.ActionLink("Moto", "PublishProduct")</h2>
        <div style="clear:both"></div>
    </div>

    <div>
        <div id="btnPublishProductStep1" style="float:left;border:solid 1px;padding:5px;" class="selectedStep">@T("PublishProduct.StepMenu1")</div>
        <div id="btnPublishProductStep2" style="float:left; border: solid 1px; padding: 5px; ">@T("PublishProduct.StepMenu2")</div>
        <div id="btnPublishProductStep3" style="float:left; border: solid 1px; padding: 5px; ">@T("PublishProduct.StepMenu3")</div>
        <div id="btnPublishProductStep4" style="float:left; border: solid 1px; padding: 5px; ">@T("PublishProduct.StepMenu4")</div>
        <div style="clear:both"></div>
    </div>

    <div id="divStep_1">
        @Html.Partial("_SelectCategory")
    </div>
    <div id="divStep_2">
        @Html.Partial("_ProductDetail")
    </div>
    <div id="divStep_3">
        @Html.Partial("_ImageSelector", 3)
        <a class="btnNext" >@T("PublishProduct.NextStep")</a>
        <a class="btnBack" >@T("PublishProduct.BackStep")</a>
    </div>
    <div id="divStep_4">
        @Html.Partial("_Summary")
    </div>
    <div id="divStep_5">
        Tu producto ha sido exitosamente publicado <br />
        @Html.ActionLink("Vender otra cosa", "PublishProduct") <br />
        @Html.ActionLink("Quiero Comprar Algo", "HomePage", "Home")
    </div>
</div>





