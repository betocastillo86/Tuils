@model Nop.Web.Models.Sales.PublishProductModel
<script id="templateSummary" type="text/template">

    <div class="content-public">
        <div class="resumen-product">
            <div class="title">Datos del producto</div>
            {{#each Properties}}
            <p><b>{{name}}:</b>  {{value}}</p>
            {{/each}}
        </div>
        <div id="divImageSummary" class="resumen-product">
            <div class="title">Fotos</div>
            <ul class="picture-resume">
                {{#each Images}}
                <li>
                    <img src="/TempFiles/{{#if thumbnail}}{{thumbnail}}{{else}}{{guid}}{{/if}}" />
                </li>

                {{/each}}
                <br />
            </ul>

        </div>
        @*<br />
        <div>
            @Html.TextBoxRequiredFor(m => m.PhoneNumber, labelText: T("PublishProduct.PhoneNumber").Text, htmlAttributes: new { maxLength = 15, tuils_val="int" })
        </div>*@
    </div>
    <hr />
    <div id="buttonsBar" class="conte_btnDoble">
        <input type="button" class="btn_continue button-1 btnFinish" value="@T("PublishProduct.FinishStep")">
        <input type="button" class="btn_continue button-1 btnBack" value="@T("PublishProduct.BackStep")">
        <br/>
    </div>
    

    <br />
    <div class="txt-terminos"><input id="chkConditions" type="checkbox" />Al publicar un aviso, admites y aceptas los <a href="/condiciones-de-uso" target="_blank">Términos y Condiciones</a> de Tuils.</div>

</script>