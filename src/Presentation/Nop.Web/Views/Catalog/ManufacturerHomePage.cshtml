@model Nop.Web.Models.Catalog.ManufacturerHomePageModel
@{
    Layout = null;
}

@if (Model.Enable)
{ 
    <ul class="conte_marcas">
        @foreach (var category in Model.Categories)
        {
            <li>
                <a href="@Url.RouteUrl("Category", new { SeName = category.SeName })">
                    <img alt="@category.PictureModel.AlternateText" src="@category.PictureModel.ImageUrl" />
                    <span>@category.Name</span>
                </a>
            </li>
        }
        @foreach (var manufacturer in Model.Manufacturers)
        {
            <li>
                <a href="@Url.RouteUrl("Manufacturer", new { SeName = manufacturer.SeName })">
                    <img alt="@manufacturer.PictureModel.AlternateText" src="@manufacturer.PictureModel.ImageUrl" />
                    <span>@manufacturer.Name</span>
                </a>
            </li>
        }
        <br />
    </ul>
}
