@model Nop.Web.Models.Catalog.VendorModel
<h3>Comentarios</h3>
<div id="divReviews">

</div>
<div id="divNoReviews" class="no-result" style="font-size:16px; display:none">
    @T("vendor.reviews.noRows", Model.Name)
    <a class="btn-result" href="@Url.Action("PublishProduct", "Sales")">Dejar comentario</a>
</div>
<div class="button-2" id="btnMore">@T("vendor.moreReviews")</div>
<script type="text/x-handlebars-template" id="templateReview">
    {{#each this}}
    <div class="caja-comment">
        <h4><a href="{{ProductUrl}}">{{ProductName}}</a></h4>
        <h4>{{Title}}<span class="fecha">{{CreatedOnUtcStr}}</span></h4>
        <div class="product-review-box">
            {{stars Rating}}
        </div>
        <p>{{ReviewText}}</p>
    </div>
    {{/each}}
</script>